{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "paths": {
            "root/*": ["./src/*"],
            "utils": ["./src/utils/index.ts"]
        },
        "outDir": "./build",
        "removeComments": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["./src/**/*"]
}
